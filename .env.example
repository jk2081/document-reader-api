# =============================================================================
# Document Reader API - Environment Configuration Template
# =============================================================================
# Copy this file to .env and update with your specific values

# =============================================================================
# API Configuration
# =============================================================================
API_V1_STR=/api/v1
PROJECT_NAME="Document Reader API"
VERSION=1.0.0
DEBUG=false

# =============================================================================
# Claude AI Configuration
# =============================================================================
# Required: Get your API key from https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-3-sonnet-20240229
CLAUDE_MAX_TOKENS=4096
CLAUDE_TEMPERATURE=0.1

# =============================================================================
# OCR Engine Settings
# =============================================================================
OCR_LANGUAGE=en
OCR_CONFIDENCE_THRESHOLD=0.3
IMAGE_RESOLUTION_SCALE=2.0
IMAGE_QUALITY=80

# =============================================================================
# File Upload & Processing
# =============================================================================
# Maximum file size in bytes (50MB default)
MAX_FILE_SIZE=52428800
# Allowed file extensions (comma-separated, no spaces)
ALLOWED_FILE_TYPES=.pdf
# Temporary upload directory
UPLOAD_DIR=/tmp/uploads
# File cleanup interval in minutes
CLEANUP_INTERVAL_MINUTES=15
# Processing timeout in seconds
PROCESSING_TIMEOUT=90
# Maximum concurrent processing requests
MAX_CONCURRENT_REQUESTS=3

# =============================================================================
# Authentication & Security
# =============================================================================
# API Keys for authentication (comma-separated, no spaces)
# Generate secure keys: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEYS=your_api_key_1,your_api_key_2
# CORS allowed origins (comma-separated, no spaces)
CORS_ORIGINS=http://localhost:3000,https://your-frontend-domain.com
# Rate limiting (requests per hour per API key)
RATE_LIMIT_PER_HOUR=1000

# =============================================================================
# Database Configuration (Future Enhancement)
# =============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/document_reader
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
# Log format: json or text
LOG_FORMAT=json
# Log file path (optional, logs to stdout if not set)
# LOG_FILE=/var/log/document-reader-api/app.log
# Log retention days
LOG_RETENTION_DAYS=30

# =============================================================================
# Monitoring & Health Checks
# =============================================================================
# Health check timeout in seconds
HEALTH_CHECK_TIMEOUT=5
# Enable metrics collection
ENABLE_METRICS=true
# Metrics port (for Prometheus scraping)
METRICS_PORT=9090

# =============================================================================
# External Services
# =============================================================================
# Sentry DSN for error tracking (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# Sentry environment
# SENTRY_ENVIRONMENT=production

# =============================================================================
# Performance & Resource Management
# =============================================================================
# Worker processes (auto-detected if not set)
# WORKERS=auto
# Worker connections
WORKER_CONNECTIONS=1000
# Keep-alive timeout
KEEP_ALIVE_TIMEOUT=5
# Request timeout
REQUEST_TIMEOUT=300

# =============================================================================
# Development Settings (Only for Development)
# =============================================================================
# Set to true for development
# DEBUG=true
# Enable auto-reload for development
# RELOAD=true
# FastAPI debug mode
# FASTAPI_DEBUG=true

# =============================================================================
# Docker & Deployment Settings
# =============================================================================
# Host and port for the application
HOST=0.0.0.0
PORT=8000
# Container user ID (for security)
# USER_ID=1000
# Container group ID
# GROUP_ID=1000

# =============================================================================
# Backup & Recovery (Future Enhancement)
# =============================================================================
# S3 bucket for document backup
# BACKUP_S3_BUCKET=your-backup-bucket
# S3 region
# BACKUP_S3_REGION=us-west-2
# Backup retention days
# BACKUP_RETENTION_DAYS=90